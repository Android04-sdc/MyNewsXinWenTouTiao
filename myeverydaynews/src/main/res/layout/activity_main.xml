<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_main_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_toutiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_1"
            android:text="头条"/>

        <Button
            android:id="@+id/btn_main_duanzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_1"
            android:text="段子"/>

        <Button
            android:id="@+id/btn_main_qiche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_1"
            android:text="汽车"/>

        <Button
            android:id="@+id/btn_main_nba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_1"
            android:text="NBA"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navi_main_show"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/btn_1"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/activity_navi_header"
        app:itemBackground="@drawable/change_item_color"
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/activity_navi_menu"/>
</android.support.v4.widget.DrawerLayout>